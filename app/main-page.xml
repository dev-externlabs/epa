<Page loaded="onNavigatingTo" class="page">
    <ActionBar title="Login" class="action-bar" />
    <StackLayout class="form" verticalAlignment="center">
        <Label text="User Name / Mobile Number" class="label" />
        <TextField id="userInputField"
           hint="Enter your username or mobile number"
           text="{{ userInput }}"
           updateTextTrigger="textChanged"
           autocorrect="false"
           autocapitalizationType="none"
           returnKeyType="done"
           class="input"/>

        <Button text="Submit" class="button" tap="onSubmitTap" />
    </StackLayout>
</Page>
